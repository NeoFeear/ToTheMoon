{% extends "template2.html.twig" %}

{% block title "Connexion" %}

{% block body %}
<section class="contact-clean mt-5">
    <form class="bg-dark border rounded border-light shadow-lg" method="post">

        <h2 class="text-center">Connexion</h2>

        <div class="form-group mb-3">
            <input class="form-control" type="text" name="username" placeholder="Pseudo" autofocus required>
        </div>

        <div class="form-group mb-3">
            <input class="form-control" type="password" placeholder="Mot de passe" name="password" required>
        </div>

        <div class="form-group">
            <span class="text-danger" id="error">{{error}}</span>
        </div>
        
        <div class="form-group mb-3">
            <button class="btn btn-primary" type="submit">Envoyer</button>
        </div>

        <a href="/register">Comment m'inscrire?</a>

    </form>
</section>
{% endblock %}