{% extends "template1.html.twig" %}


{% block title %}Édition de {{ user.username }}{% endblock %}

{% block body %}
    <section class="mt-5 contact-clean mb-5">
        <form class="bg-dark border rounded border-light shadow-lg text-light" method="POST">
            <h1 class="mb-4">Modification de vos <b><span style="color: rgb(255,210,52);">Informations personnelles</span></b></h1>

            <div class="form-group mb-3">
                <label for="username" class="form-label">Pseudo</label>
                <input type="text" name="username" value="{{ user.username }}" class="text-dark form-control">
            </div>

            <div class="form-group mb-3">
                <label for="firstName" class="form-label">Prénom</label>
                <input type="text" name="firstName" value="{{ user.firstName }}" class="text-dark form-control">
            </div>

            <div class="form-group mb-3">
                <label for="lastName" class="form-label">Nom</label>
                <input type="text" name="lastName" value="{{ user.lastName }}" class="text-dark form-control">
            </div>

            <div class="form-group mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" value="{{ user.email }}" class="text-dark form-control">
            </div>

            <div class="form-group mb-3">
                <label for="picture" class="form-label">Photo de profil</label>
                <input type="url" name="picture" value="{{ user.picture }}" class="text-dark form-control">
            </div>

            <div class="form-group">
                <span class="text-success" id="message">{{message}}</span>
                <span class="text-danger" id="error">{{error}}</span>
            </div>

            <button class="btn btn-primary" name="envoi" type="submit">Envoyer</button>
        </form>
    </section>
{% endblock %}