{% extends "template1.html.twig" %}

{% block body %}

    {% if session.logged is not defined %}

        <div class="d-flex justify-content-center">  
            <lottie-player src="https://assets7.lottiefiles.com/packages/lf20_ZQhQzO.json" 
                mode="bounce" 
                background="transparent" 
                speed="1" 
                style="width:90%; max-width: 550px;" 
                loop autoplay>
            </lottie-player>
        </div>

        <button class="btn btn-lg btn-warning m-5 fw-bold" onclick="location.href='/login'">COMMENCER UNE PARTIE</button>

    {% else %}

        <div class="col-12 mb-5">
            <h1 id="test">Bienvenue {{ session.logged.username }} !</h1>
            <h4>
                Vous devez inviter vos amis à jouer une partie avec vous.<br>
                Pour cela, inscrivez le pseudo de vos amis dans les champs suivant.<br>
                Bon jour à vous!
            </h4>

        </div>

        <div class="container">
          <div class="row">
            <form action="POST" >

              
              <div class="col-12 col-sm-6 offset-sm-3 mb-3  form-group d-flex">
                <input type="text" class="form-control" id="player2" placeholder="Pseudo du joueur 1" />
                <select id="colorPicker0">
                  <option value="none" selected disabled hidden> Select a color</option>
                </select>
              </div>

              <div class="col-12 col-sm-6 offset-sm-3 mb-3 form-group d-flex">
                <input type="text" class="form-control" id="player3" placeholder="Pseudo du joueur 2" />
                <select id="colorPicker1">
                  <option value="none" selected disabled hidden> Select a color</option>
                </select>
              </div>

              <div class="col-12 col-sm-6 offset-sm-3 mb-3  form-group d-flex">
                <input type="text" class="form-control" id="player4" placeholder="Pseudo du joueur 3" />
                <select id="colorPicker2">
                  <option value="none" selected disabled hidden> Select a color</option>
                </select>
              </div>

              <div class="col-12 col-sm-6 offset-sm-3 mb-3  form-group d-flex">
                <input type="text" class="form-control" id="player5" placeholder="Pseudo du joueur 4" />
                <select id="colorPicker3">
                  <option value="none" selected disabled hidden> Select a color</option>
                </select>
              </div>

              <div class="col-12 col-sm-6 offset-sm-3 mb-3 form-inline form-group d-flex">
                <input type="text" class="form-control" id="player6" placeholder="Pseudo du joueur 5" />
                <select id="colorPicker4">
                  <option value="none" selected disabled hidden> Select a color</option>
                </select>
              </div>

              <div class="col-12 col-sm-6 offset-sm-3 mb-3 form-inline form-group d-flex">
                <input type="text" class="form-control" id="player1" placeholder="Pseudo du joueur 6" />
                <select id="colorPicker5">
                  <option value="none" selected disabled hidden> Select a color</option>
                </select>
                
              </div>

               <button class="btn btn-warning btn-lg fw-bolder">ENVOYER</button>
            </form>
          </div>
        </div>

    {% endif %}

{% endblock %}